{
    "name": "hadefication/zeri",
    "description": "A Laravel Zero CLI tool for managing AI development contexts. Generate optimized instruction files for Claude, Gemini, and Cursor.",
    "keywords": ["cli", "ai", "development", "context", "claude", "gemini", "cursor", "laravel-zero"],
    "homepage": "https://github.com/hadefication/zeri",
    "type": "project",
    "license": "MIT",
    "support": {
        "issues": "https://github.com/hadefication/zeri/issues",
        "source": "https://github.com/hadefication/zeri"
    },
    "authors": [
        {
            "name": "Glen Bangkila",
            "email": "glen@example.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "laravel-zero/framework": "^12.0",
        "laravel-zero/phar-updater": "^1.4"
    },
    "require-dev": {
        "laravel/pint": "^1.22",
        "mockery/mockery": "^1.6.12",
        "pestphp/pest": "^3.8.2"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "bin": ["builds/zeri"]
}
